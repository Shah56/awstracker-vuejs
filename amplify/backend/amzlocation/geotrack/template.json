{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Outputs": {
        "LocationTrackerOutput": {
            "Value": {
                "Ref": "LocationTracker"
            }
        },
        "LocationRouteOutput": {
            "Value": {
                "Ref": "LocationRoute"
            }
        },
        "LocationPlaceOutput": {
            "Value": {
                "Ref": "LocationPlace"
            }
        }
    },
    "Resources": {
        "LocationTracker": {
            "Type": "AWS::Location::Tracker",
            "Properties": {
                "PricingPlan": { "Ref": "DefaultPricingPlan" },
                "Description": {
                    "Fn::Sub": "${ProjectName}-${env}"
                },
                "TrackerName": {
                    "Fn::Sub": "${ProjectName}-${env}-tracker"
                }
            }
        },
        "TrackerParameter": {
            "Type": "AWS::SSM::Parameter",
            "Properties": {
                "Type": "String",
                "Name": {
                    "Fn::Sub": "/amplify/${ProjectName}/${env}/tracker"
                },
                "Value": {
                    "Ref": "LocationTracker"
                }
            }
        },
        "LocationGeofence": {
            "Type": "AWS::Location::GeofenceCollection",
            "Properties": {
                "CollectionName": {
                    "Fn::Sub": "${ProjectName}-${env}-geofence"
                },
                "PricingPlan": { "Ref": "DefaultPricingPlan" },
                "Description": {
                    "Fn::Sub": "${ProjectName}-${env}"
                }
            }
        },
        "GeoFenceParameter": {
            "Type": "AWS::SSM::Parameter",
            "Properties": {
                "Type": "String",
                "Name": {
                    "Fn::Sub": "/amplify/${ProjectName}/${env}/geofence"
                },
                "Value": {
                    "Ref": "LocationGeofence"
                }
            }
        },        
        "LocationRoute": {
            "Type": "AWS::Location::RouteCalculator",
            "Properties": {
                "DataSource": "Esri",
                "PricingPlan": { "Ref": "DefaultPricingPlan" },
                "Description": {
                    "Fn::Sub": "${ProjectName}-${env}"
                },
                "CalculatorName": {
                    "Fn::Sub": "${ProjectName}-${env}-route"
                }
            }
        },
        "RouteParameter": {
            "Type": "AWS::SSM::Parameter",
            "Properties": {
                "Type": "String",
                "Name": {
                    "Fn::Sub": "/amplify/${ProjectName}/${env}/route"
                },
                "Value": {
                    "Ref": "LocationRoute"
                }
            }
        },
        "LocationMap": {
            "Type": "AWS::Location::Map",
            "Properties": {
                "MapName": {
                    "Fn::Sub": "${ProjectName}-${env}-map"
                },
                "Configuration": {
                    "Style": "VectorEsriStreets"
                },
                "PricingPlan": { "Ref": "DefaultPricingPlan" },
                "Description": {
                    "Fn::Sub": "${ProjectName}-${env}"
                }
            }
        },       
        "MapParameter": {
            "Type": "AWS::SSM::Parameter",
            "Properties": {
                "Type": "String",
                "Name": {
                    "Fn::Sub": "/amplify/${ProjectName}/${env}/map"
                },
                "Value": {
                    "Ref": "LocationMap"
                }
            }
        },
        "LocationPlace": {
            "Type": "AWS::Location::PlaceIndex",
            "Properties": {
                "PricingPlan": { "Ref": "DefaultPricingPlan" },
                "Description": {
                    "Fn::Sub": "${ProjectName}-${env}"
                },
                "DataSourceConfiguration": {
                    "IntendedUse": "SingleUse"
                },
                "IndexName": {
                    "Fn::Sub": "${ProjectName}-${env}-place"
                },
                "DataSource": "Esri"
            }
        },        
        "PlaceParameter": {
            "Type": "AWS::SSM::Parameter",
            "Properties": {
                "Type": "String",
                "Name": {
                    "Fn::Sub": "/amplify/${ProjectName}/${env}/place"
                },
                "Value": {
                    "Ref": "LocationPlace"
                }
            }
        }
    },
    "Description": "\"GeoTrack Application \\n\"\n",
    "Parameters": {
        "ProjectName": {
            "Default": "NONE",
            "Type": "String",
            "Description": "A description to identify project"
        },
        "DefaultPricingPlan": {
            "Default": "RequestBasedUsage",
            "Type": "String",
            "Description": "Location Pricing Default Plan"
        },
        "env": {
            "Type": "String",
            "Description": "The environment name. e.g. Dev, Test, or Production",
            "Default": "NONE"
        }
    }
}